@model EastMed.Data.Model.location_has_item

@{
    ViewBag.Title = "LocationEditItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>

        Edit Item location
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
          @Model.location.ROOM_ID
        </small>
    </h1>

</div>

<div class="row">
    <div class="col-md-offset-2 col-md-8 col-xs-12 col-lg-8">
        <div class="space"></div>
        <h4 class="header blue bolder smaller">Edit item @Model.item.ITEM_NAME </h4>

        <div class="form-horizontal">
            <fieldset>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                       
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.location_ID)

                        @Html.HiddenFor(model => model.item_ID)

                        <div class="form-group">
                            @Html.LabelFor(model => model.ItemQuantity, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-3 col-xs-12">
                                @Html.EditorFor(model => model.ItemQuantity, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ItemQuantity, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>

            </fieldset>
        </div>
    </div>
</div>