@model EastMed.Data.Model.location

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">

    <h5 class="coloremu">
        <i class="ace-icon fa fa-map-marker"></i>
        @ViewBag.Title of @Model.ROOM_ID
    </h5>

</div>
<div class="row">
    <div class="col-md-offset-2 col-md-8 col-xs-12 col-lg-8">
        <div class="space"></div>
        <h4 class="header blue bolder smaller">About Location </h4>
        <div class="form-horizontal">
            <fieldset>
               
                    @Html.HiddenFor(model => model.ID)

                    <div class="row">
                        <div class="col-xs-12 col-md-6 no-padding-right">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr></tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span class="pull-right"> Department</span>
                                        </td>
                                        <td>
                                            @Model.departmant.DEPT_NAME
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="pull-right">    Room No </span>
                                        </td>
                                        <td>
                                            @Model.ROOM_ID.ToUpper()
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><span class="pull-right"> Room Type </span></td>
                                        <td> @Model.TYPE</td>
                                    </tr>
                                   
                                    <tr>
                                        <td><span class="pull-right"> Created Date </span></td>
                                        <td>@Model.CREATED_DATE</td>
                                    </tr>
                                    <tr>
                                        <td><span class="pull-right">Updated Date</span></td>
                                        <td>@Model.UPDATED_DATE</td>
                                    </tr>
                                </tbody>
                            </table>

                    </div>
                </div>
                    
                    <h4 class="header blue bolder smaller">Location Items </h4>
                <div class="space-24"></div>                 
               
                @if (Model.location_has_item.Any())
                {
                    <div class="col-md-6 col-xs-12">
                        <div class="panel panel-primary">
                            <div class="panel-heading">Items in that Location</div>

                            <div class="table-responsive">
                                <table id="dynamic-table2" class="table table-bordered table-striped table-hover ">
                                    <thead>
                                        <tr>

                                            <th> ITEM NAME</th>
                                            <th> ITEM QUANTITY </th>
                                           
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.location_has_item)
                                        {
                                            <tr>
                                                <td class="col-md-4 col-xs-4 col-lg-4">
                                                    @item.item.ITEM_NAME

                                                </td>
                                                <td class="col-md-4 col-xs-4 col-lg-4">


                                                    @item.ItemQuantity
                                                </td>
                                              
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="panel panel-primary">
                        <div class="panel-heading">Items in that Location</div>
                        <div class="well well-sm"> This location does not have any item </div>
                    </div>
                }
            </fieldset>
        </div>

        <div id="dialog-alert" style="display: none">
            <p>
                @TempData["msg"]!
            </p>
        </div>

        <div id="dialog-confirm" style="display: none">
            <p>
                <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
                Are you sure to delete?
            </p>
        </div>

        

</div>
    </div>
<div class="space-16"></div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-white btn-info" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-white btn-info" })
</p>
  
